.subheading
  margin-top .75rem
  margin-bottom .75rem
  font-weight normal
  line-height 1.3
  font-size 1.2rem

  +from(3)
    font-size 1.5rem

.title
  margin-top 2rem

  +from(3)
    text-align center
    margin-top 3rem

.content
  padding 1rem 0

  +from(3)
    column(4/5, offset: 1/10)

  +from(desktop-cutoff)
    column(2/3, offset: 1/6)

  > p:first-of-type
    font-size 125%

    +from(3)
      font-size 150%

.meta
  border-top 1px solid silver
  padding-top .6rem
  color gray

  +from(3)
    text-align center
