// edit()

body
  gradient white - 11% white - 17%
  background-attachment fixed
  +from(4)
    center(desktop-cutoff)

[role="main"]
  background content-bg-color
  group()

  .featured
    center(desktop-cutoff, false)
    background-color white
    padding 1rem
    margin-bottom 1rem
    +from(4)
      padding 1rem 2rem

  article.content
    padding 0 1rem 2rem
    +from(3)
      column(4/5, offset: 1/10)
    +desktop()
      column(2/3, offset: 1/6)

h1.headline
  margin .75rem auto 0
  max-width 80%
  text-align center

h2.subheading
  margin-top .75rem
  margin-bottom .5rem
  text-align center
  font-weight normal  
  line-height 1.3
  font-size 1.2rem
  +from(3)
    font-size 1.5rem

button.action
  glossy-button(olive, 21)
  transition()
  center(desktop-cutoff)
  margin-bottom 1.5rem
  padding 1rem
  font-weight 700 

video(max-width = .75, margin-bottom = 1.5rem)
  position relative
  padding-bottom 56.3%
  height 0
  margin-bottom margin-bottom
  overflow hidden
  if max-width isnt false
    +from(4)
      center(desktop-cutoff * .75)
      padding-bottom @padding-bottom * .75
  iframe, object, embed, video
    absolute top left
    size 100% 100%

.video
  video()

img
  max-width 100%
  height auto
  -ms-interpolation-mode bicubic
  display inline-block
  vertical-align middle
