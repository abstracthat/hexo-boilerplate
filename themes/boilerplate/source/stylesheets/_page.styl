// edit()

body
  // gradient(tint(color2,80%),6%)
  // background-attachment fixed
  background white
  font-family font-stack

[role="main"]
  background content-bg-color
  group()

  +from(4)
    center(desktop-cutoff)

  .featured
    center(desktop-cutoff, false)
    background-color white
    padding 1rem
    margin-bottom 1rem
    +from(4)
      padding 1rem 2rem

  article.content
    padding 1.5rem 1rem

    +from(3)
      column(4/5, offset: 1/10)
      padding-top 2rem

    +desktop()
      column(2/3, offset: 1/6)
      padding-top 3rem

    p:first-of-type
      font-size 140%

      +from(3)
        font-size 160%

.headline
  margin 0 0 1rem

.meta
  border-top 1px solid silver
  padding-top .6rem
  color gray

h2.subheading
  margin-top .75rem
  margin-bottom .5rem
  text-align center
  font-weight normal
  line-height 1.3
  font-size 1.2rem
  +from(3)
    font-size 1.5rem

button.action
  glossy-button(olive, 21)
  transition()
  center(desktop-cutoff)
  margin-bottom 1.5rem
  padding 1rem
  font-weight 700

video(max-width = .75, margin-bottom = 1.5rem, margin-top = 1rem, widescreen = true)
  position relative
  if widescreen == true
    padding-bottom 56.25%
  else
    padding-bottom 75%
  height 0
  margin-top margin-top
  margin-bottom margin-bottom
  overflow hidden
  if max-width isnt false
    +from(4)
      center(desktop-cutoff * max-width)
      if widescreen == true
        padding-bottom 56.25% * max-width
      else
        padding-bottom 75% * max-width
  iframe, object, embed, video
    absolute top left
    size 100% 100%

.video
  video(widescreen: false)

.widescreen-video
  video()

img
  max-width 100%
  height auto
  -ms-interpolation-mode bicubic
  display inline-block
  vertical-align middle
