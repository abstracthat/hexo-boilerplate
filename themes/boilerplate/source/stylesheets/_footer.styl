footer.footer
  padding .25rem 1rem 1rem
  background-color black + 15%
  +from(3)
    padding .5rem 2rem
  nav
    center(desktop-cutoff)
    group()
    margin-top 1rem
  a
    link(white - 30%)
  p
    color white - 30%
    text-align center
    display block
    margin 0
    +from(3)
      margin-bottom 1rem
      text-align left
      display inline-block
      float left
  ul
    text-align center
    list-style none
    margin 0
    li
      margin 0 .5rem
      display inline-block
      +from(3)
        margin 0 1rem
        border none
        padding 0
      a
        color white - 30%
        transition()
    +from(3)
      float right
      display inline-block
      text-align left