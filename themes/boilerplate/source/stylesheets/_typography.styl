// edit()

h1
  font-size 2.2rem
  line-height 1.1
  margin 1rem auto .75rem
  +from(mobile-cutoff)
    font-size 3.1rem
    margin-bottom .85rem
  +from(desktop-cutoff)
    font-size 4rem
    margin-bottom 1rem

h2
  font-size 1.7rem
  line-height 1.3
  margin-top 1.2rem
  margin-bottom 0
  +from(mobile-cutoff)
    font-size 2.2rem
    margin-top 1.1rem
  +from(desktop-cutoff)
    font-size 2.5rem
    margin-top 1.1rem

h3
  font-size 1.6rem
  line-height 1.1
  font-weight normal
  margin-top 1.1rem
  margin-bottom 0
  +from(mobile-cutoff)
    font-size 1.8rem
    margin-top 1rem
  +from(desktop-cutoff)
    font-size 2rem

h4
  font-size 1.3rem
  margin-top .9rem
  margin-bottom 0
  font-weight normal
  +from(mobile-cutoff)
    font-size 1.8rem
    margin-top .9rem
  +from(desktop-cutoff)
    font-size 2rem
    margin-top .9rem

h5
  font-size 1rem
  margin 0
  font-weight normal
  +from(mobile-cutoff)
    font-size 1.1rem
  +from(desktop-cutoff)
    font-size 1.3rem

h6
  font-size 0.9rem
  margin 0

pre + h2, pre + h3
  margin-top 1.4rem

h3 + pre
  margin-top 1.4rem

p
  paragraph()
  line-height 1.8

bold-italic()
hyphenation()
text-selection()

small
  $small()

a
  link()

blockquote
  $blockquote(olive)
  background-color content-bg-color - 4%

  p
    margin 1.25rem 1rem 1.25rem 0
    padding-left .75rem
    line-height 1.5

  a
    link(olive)

ul
  margin 0.5rem 0.94rem
  padding-left .25rem

  li
    list-style-type disc
    padding 0.125rem
    line-height 1.6

ol
  margin 0.32rem 0 .5rem 0.5rem
  padding-left 1rem

  li
    list-style-type decimal
    padding 0.125rem
    line-height 1.6

pre > code
  color black + 25%
  display block
  padding .75rem
  background-color content-bg-color - 5%
  border 1px solid black + 75%
  border-radius 3px
  white-space pre-wrap
  word-break break-all
  font-family Menlo, Monaco, monospace
  font-size .95rem
  line-height 160%
  +from(mobile-cutoff)
    font-size 1rem
    padding 1rem

code
  $code()

// Break long urls
html
  word-wrap break-word

fieldset
  border none
