// edit()

h1
  font-size 2.2rem
  line-height 1.1
  margin 1rem auto .75rem
  +tablet()
    font-size 3.1rem
    line-height 1.1
    margin-bottom .85rem
  +desktop()
    font-size 4rem
    line-height 1.1
    margin-bottom 1rem
h2
  font-size 1.7rem
  line-height 1.3
  margin-top 1.2rem
  margin-bottom 0
  +tablet()
    font-size 2.2rem
    margin .9rem 0 0
  +desktop()
    font-size 2.5rem
    margin .9rem 0 0
h3
  font-size 1.6rem
  line-height 1.1
  font-weight normal
  margin 1rem 0 0
  +tablet()
    font-size 1.8rem
    line-height 1.1
    font-weight normal
    margin .9rem 0 0
  +desktop()
    font-size 2rem
    line-height 1.1
    font-weight normal
    margin 1rem 0 0
h4
  font-size 1.3rem
  margin .9rem 0 0
  font-weight normal
  +tablet()
    font-size 1.8rem
    margin .9rem 0 0
    font-weight normal
  +desktop()
    font-size 2rem
    margin .9rem 0 0
    font-weight normal
h5
  font-size 1rem
  margin 0
  font-weight normal
  +tablet()
    font-size 1.1rem
    margin 0
    font-weight normal
  +desktop()
    font-size 1.3rem
    margin 0
    font-weight normal
h6
  font-size 0.9rem
  margin 0

pre + h2, pre + h3
  margin-top 1.4rem

h3 + pre
  margin-top 1.4rem

bold-italic()
hyphenation()
text-selection()

p
  paragraph()
  line-height 1.8

small
  $small()

a
  link()

blockquote
  $blockquote(olive)
  background-color content-bg-color - 4%
  p
    margin-bottom 0
    padding 1rem .75rem 1rem 0

  a
    link(olive)

ul
  margin 0.5rem 0.94rem
  padding-left .25rem
  li
    list-style-type disc
    padding 0.125rem
    line-height 1.6

ol
  margin 0.32rem 0 .5rem 0.5rem
  padding-left 1rem
  li
    list-style-type decimal
    padding 0.125rem
    line-height 1.6

pre > code
  color black + 25%
  display block
  padding .75rem
  background-color content-bg-color - 5%
  border 1px solid black + 75%
  border-radius 3px
  white-space pre-wrap
  word-break break-all
  font-family Menlo, Monaco, monospace
  font-size .95rem
  line-height 160%
  +from(mobile-cutoff)
    font-size 1rem
    padding 1rem
code
  $code()

// Break long urls
html
  word-wrap break-word

fieldset
  border none
