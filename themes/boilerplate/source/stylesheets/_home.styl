.category-index
  group()
  margin 2rem 0

  & > h3
    text-align center

  .category
    background black

    +from(4)
      column(1/3, false)

    &:hover, &:active
      background black + 20%

    h2
      padding 1rem 0
      width 100%
      text-align center
      color color2
      border-bottom 1px solid silver

    p
      color silver
      text-align center
      background yellow
