    h1: 3.1
    line-height: 1.1
  +desktop()
    h1: 4
    line-height: 1.1
h2
  h2: 1.7
  line-height: 1.1
  +tablet()
    h2: 2.2
    line-height: 1.1
  +desktop()
    h2: 2.8
    line-height: 1.1
h3
  h3: 1.5
  +tablet()
    h3: 2
  +desktop()
    h3: 2.4
h4
  h4: 1.3
  +tablet()
    h4: 1.8
  +desktop()
    h4: 2
h5
  h5: 1
  +tablet()
    h5: 1.1
  +desktop()
    h5: 1.3
h6
  h6: 0.9

blockquote p
  margin-bottom 0


//
// Layout
