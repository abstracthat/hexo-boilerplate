// Axis Settings (http://roots.cx/axis)

// font stack (add your own!)
helvetica-neue = "Helvetica Neue", HelveticaNeue, Helvetica, Arial, sans-serif
helvetica = "Helvetica Neue", Helvetica, Arial, sans-serif
georgia = Georgia, Cambria, "Times New Roman", Times, serif
lucidia-grande = "Lucida Grande", Tahoma, Verdana, Arial, sans-serif
monospace = unquote("'Bitstream Vera Sans Mono', Consolas, Courier, monospace")
verdana = Verdana, Geneva, sans-serif

// default font stack
font-stack = helvetica-neue
font-size = 16
font-color = #555

color1 = #008CBA
color2 = #fff - 30%
color3 = #f04124
color4 = #43AC6A
color5 = #f08a24
color6 = #a0d3e8

// colors (via http://clrs.cc - slightly modded)
navy = #001F3F
blue = #0074D9
aqua = #7FDBFF
teal = #39CCCC
olive = #3D9970
green = #2ECC40
lime = #01FF70
yellow = #FFDC00
orange = #FF851B
red = #D13F19
maroon = #85144B
fuchsia = #F012BE
purple = #B10DC9
white = #FFFFFF
silver = #DDDDDD
gray = #AAAAAA
black = #222222

// default color
default-color = blue

// text highlight color
highlight-color = blue + 30%

// ligatures
ligatures = false

// vertical rhythm
base-line-height = 24px
default-rhythm-border-style = solid
relative-font-sizing = true
round-to-nearest-half-line = false
min-line-padding = 2px

// custom image base path for axis mixins
img-path = '/img/'

// Breakpoints (http://jenius.github.io/rupture/)
mobile-cutoff = 600px
desktop-cutoff = 1050px
enable-em-breakpoints = true
base-font-size = 16px
scale = 0 mobile-cutoff 700px 900px desktop-cutoff

// Grid Settings (http://jeet.gs/)
jeet = {
  gutter: 3,
  parent-first: false,
  layout-direction: LTR
}

g = jeet.gutter

// support for old IE
support-for-ie = false

// progressive IE (http://css3pie.com/)
pie-enabled = false
pie-path = '/pie.htc'
