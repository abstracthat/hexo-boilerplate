include icons

mixin main-menu
  nav.main-menu
    ul
      each link, name in config.menu
        //- This is not working to set .active for the page. It should also check is_post for /blog/*
        //- - var current = is_current(link) ? 'active' : null;
        li: a(href=link, class= current)= name

mixin header(header)
  header.logo(class=header)
    h1: a(href=config.root)= config.title
    block

//- Add social sharing buttons by passing an array
//- +social-buttons(['twitter','facebook','googleplus','linkedin','pinterest','tumblr'])
//- Buttons will automatically flow to the size of the ul
mixin socialbuttons(socialsites)
  ul.rrssb-buttons.clearfix
    each socialsite in socialsites
      case socialsite
        when 'twitter'
          li(class=socialsite)
            a(target='_blank', href='#')
              +icon-twitter()
              span.text Twitter
        when 'facebook'
          li(class=socialsite)
            a(target='_blank', href='#')
              +icon-facebook()
              span.text Facebook
        when 'googleplus'
          li(class=socialsite)
            a(target='_blank', href='#')
              +icon-google-plus()
              span.text Google+
        when 'linkedin'
          li(class=socialsite)
            a(target='_blank', href='#')
              +icon-linkedin()
              span.text LinkedIn
        when 'pinterest'
          li(class=socialsite)
            a(target='_blank', href='#')
              +icon-pinterest()
              span.text Pinterest
        when 'tumblr'
          li(class=socialsite)
            a(target='_blank', href='#')
              +icon-tumblr()
              span.text Tumblr
