include icons

mixin main-menu
  nav.main-menu
    h1: a(href=config.root)= config.title
    ul
      each link, name in config.menu
        - var current = path == link.substring(1)  + 'index.html' ? 'active' : '';
        li: a(href=link, class=current)= name
      each cat in site.categories.toArray()
        - var current = is_active_category(cat.name) ? 'active' : '';
        li: a(href=cat.path, class=current): = cat.name

mixin header(header)
  header.logo(class=header)
    h1: a(href=config.root)= config.title
    block

//- Add social sharing buttons by passing an array
//- +social-buttons(['twitter','facebook','googleplus','linkedin','pinterest','tumblr'])
mixin socialbuttons(socialsites)
  ul.social
    each socialsite in socialsites
      case socialsite
        when 'twitter'
          li(class=socialsite)
            if config.twitter
              a(target='_blank', href='https://twitter.com/intent/tweet?text=#{page.title}&url=#{url}&via=#{config.twitter}')
                +icon-twitter()
                span.text Twitter
            else
              a(target='_blank', href='https://twitter.com/intent/tweet?text=#{page.title}&url=#{url}')
                +icon-twitter()
                span.text Twitter
        when 'facebook'
          li(class=socialsite)
            a(target='_blank', href='https://www.facebook.com/sharer/sharer.php?u=#{url}')
              +icon-facebook()
              span.text Facebook
        when 'googleplus'
          li(class=socialsite)
            a(target='_blank', href='https://plus.google.com/share?url=#{url}')
              +icon-google-plus()
              span.text Google+
        when 'pinterest'
          li(class=socialsite)
            //- Can we choose the first image from a post for the media parameter?
            a(target='_blank', href='https://pinterest.com/pin/create/button/?url=#{url}&description=#{page.title}&media=')
              +icon-pinterest()
              span.text Pinterest
        when 'tumblr'
          li(class=socialsite)
            a(target='_blank', href='http://www.tumblr.com/share')
              +icon-tumblr()
              span.text Tumblr
