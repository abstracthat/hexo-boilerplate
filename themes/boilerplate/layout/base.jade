include _partial/mixins

doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
include _partial/head
  body(class=bodyclass)
    block header
      if config.type != 'single'
        header.main
          h1: a(href=config.root)= config.title
          nav.main-menu
            ul
              each link, name in config.menu
                //- This is not working to set .active for the page. It should also check is_post for /blog/*
                //- - var current = is_current(link) ? 'active' : null;
                li: a(href=link, class= current)= name
    block main-container
      div(role="main")
        block content
          !=page.content
    block footer
      footer
        nav
          p 
            | &copy; &nbsp;
            if config.year_started
              | #{config.year_started} &ndash; 
            | #{ new Date().getFullYear() } &nbsp;
            | <a href="#{config.url}">#{ config.title }</a>
          ul
            each link, name in config.footerMenu
              li: a(href=link)=name

    block scripts
      !=js(theme.scripts)