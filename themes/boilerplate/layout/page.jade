extends base

block content
  if page.article_feature
    .feature
      .container
        if page.title
          h1.headline= page.title
        if page.subheading
          h2.subheading= page.subheading
        if page.video
          .widescreen-video
            iframe(width="1280" height="720" src="//www.youtube.com/embed/#{page.video}?vq=hd720&controls=0&modestbranding" frameborder="0" allowfullscreen)
        if page.button
          a.button(href=page.button_link, rel="nofollow")= page.button

  .container
    unless page.article_feature
      header: h1.title= page.title
    article.content
      !=page.content
      if page.social
        +socialbuttons(page.social)
