block head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title
    block title
      if is_home
        | #{config.title}: #{config.subtitle}
      else
        | #{page.title} | #{config.title}
  block meta
    if is_home
      meta(name='description', content=config.description)
    else
      meta(name='description', content=page.description)
    if config.author
      meta(name='author', content=config.author)
    //- meta(property="og:image", content="/img/logo.jpg")

  block link
    link(rel='alternate', href=theme.rss ? theme.rss : config.root + 'atom.xml', title='config.title', type='application/atom.xml')
    link(rel="shortcut icon", href="ico/favicon.ico")
    each size in [144,114,72,57]
      link(rel="apple-touch-icon", sizes="#{size}x#{size}", href="/ico/apple-touch-icon-#{size}.png")  
  block headStyles
    //- Shim: IE6-8 support of HTML5 elements
    //if lt IE 9
      script(async src="http://html5shim.googlecode.com/svn/trunk/html5.js")
    if theme.google_font
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=#{theme.google_font}')
    !=css(theme.css)
  block headScripts
    !=js(theme.headScripts)